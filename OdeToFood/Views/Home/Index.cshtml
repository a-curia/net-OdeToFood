@model OdeToFood.ViewModels.HomeIndexViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h1>Hello</h1>
    <div>this is the index view</div>
    <hr />
    
    <h1>@Model.CurrentMessage</h1>
    <table>
        @foreach (var restaurant in Model.Restaurants)
        {
        <tr>
            <td>@restaurant.Id</td>
            <td>@restaurant.Name</td>
            <td>
                <a href="/home/details/@restaurant.Id">Details</a>

                @Html.ActionLink("GoTo", "Details", new { id=restaurant.Id })  @* using the Html Helpers*@

                @*using tag healpers from _ViewImports*@
                <a asp-action="Details" asp-route-id="@restaurant.Id">GotoUsingTagHelpers</a>
            </td>
        </tr>
        }

    </table>
</body>
</html>